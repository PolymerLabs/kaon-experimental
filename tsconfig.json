{
    "compilerOptions": {
        "target": "es2017",
        "module": "es2015",
        "moduleResolution": "node",
        "isolatedModules": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "removeComments": true,
        "lib": ["es2017", "dom"],
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "./",
        "rootDirs": [
          ".",
          "./node_modules",
          "./node_modules/@types"
        ]
    },
    "include": [
        "src/**/*.ts",
        "custom_typings/*.d.ts"
    ],
    "exclude": []
}
