{
    "compilerOptions": {
        "target": "es6",
        "module": "amd",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outFile": "build/kaon/kaon.js"
    },
    "filesGlob": [
        "**/*.ts",
        "custom_typings/*.d.ts",
        "!node_modules/**"
    ],
    "files": [
        "custom_typings/mixwith.d.ts",
        "custom_typings/stampino.d.ts",
        "lib/kaon.ts",
        "lib/kaon/async-measure.ts",
        "lib/kaon/attributes.ts",
        "lib/kaon/base.ts",
        "lib/kaon/constructor.ts",
        "lib/kaon/decorators.ts",
        "lib/kaon/symbols.ts",
        "lib/kaon/template.ts",
        "lib/kaon/util.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
